<?xml version="1.0" encoding="utf-8"?>
<gsc>

<applet>DualLineGray16</applet>      <!-- Name of FPGA applet -->
<applettype>1</applettype>          <!-- Type of applet 0 = area 1 = line -->

<boardidx>0</boardidx>				<!-- Index of board. (0,1,....) -->
<lvdsport>0</lvdsport>				<!-- 0 = LVDS Port A, 1 = LVDS Port B -->	
<lvdsmode>5</lvdsmode>				<!-- 0 = 1x8Bit 1 = 1x10bit 2 = 1x12bit 5 = 2x8Bit 6 = 2x10bit 7 = 2x12bit-->	
<!-- IP Adress of gige grabber -->
<!-- Available camera types -->
<!-- 0 = UNKNOWN 			-->
<!-- 1 = DALSA SPYDER 		-->
<!-- 2 = DALSA_LINEA_GE	-->
<!-- 3 = DALSA_LINEA_GE	-->
<!-- 4 = VISTEK_SV4021		-->
<!-- 5 = VISTEK_SV4022		-->
<!-- 6 = ALLIED GOLD EYE	-->
<!-- 7 = SIMULATOR			-->
<!-- 8 = SCHWAB_CLSC_LUMA	-->
<!-- 9 = SCHWAB_CLSC_CHROMA-->
<!-- 10 = SICK_RANGER_E	-->
<cameramodel>3</cameramodel>
<readwidth>8192</readwidth>			<!-- 0 = Number of pixel grabber read from camera -->
<readheight>256</readheight>		<!-- 0 = Number of lines grabber read from camera -->
<bytesperpixel>1</bytesperpixel>	<!-- Number of bytes to read per pixel -->
<!-- <timeout>100000</timeout>				<!-- timeout in seconds  -->
<stoptimeout>1000</stoptimeout>		<!-- timeout for stopping aquire in milliseconds  -->
<aquiremode>0</aquiremode>			<!-- 0 = ringbuffer 1 = blocking(fifo) mode -->
<apcmode>0</apcmode>				<!-- 0 = Synchron(polling) grabbing 1 = asynchron (callback) grabbing -->

<linetrigger>										
    <type>2</type>                  <!-- 2 = via grabber (cameratrigger is cc1 on camera link)  	-->
    <divider>1</divider>            <!-- 0 = extern trigger divider -->
    <inputsrc0>0</inputsrc0>		<!-- Number of trigger input src SPUR A 	-->
    <inputsrc1>0</inputsrc1>		<!-- Number of trigger input src SPUR B 	(SPURA == SPURB) ohne SHAFT Encoder-->
    <debouncing>20</debouncing>		<!-- Debouncing time in microseconds -->
</linetrigger>

<frametrigger>	
    <detectionmode>0</detectionmode><!-- 0=Hardware-Detection  1=Software-Detection-Image  2=Software-Detection-Input -->								
    <type>2</type>					<!-- 2 = via grabber (cameratrigger inp is grabber output 	-->
    <inputsrc>2</inputsrc>			<!-- Number of trigger input src for frame trigger 	-->
    <inputctrl>3</inputctrl>		<!-- Number of trigger input for control "Frame Active" generated by camera 	-->
    <invert>0</invert>				<!-- 0 = No input invert 1 = invert input)  	-->
	<delay>0</delay>				<!-- Trigger delay in lines -->
	<mode>1</mode>					<!-- 0 = Gated (One block per frame) 1 = Multi-Gated (More blocks per frame)  	-->	
	<expotime>50</expotime>			<!-- Exposure time [us] for frame is triggered by software)  	-->		
	<framerate>1</framerate>		<!-- Framerate for frame is triggered by software)  		-->		
    <blockmax>500</blockmax>	    <!-- Maximal number of blocks per valid frametrigger)  	future should be caculated from max sample len and resolution	-->
</frametrigger>

<idledelaytime>50</idledelaytime>    <!-- Delaytime [us] fro grabber thread while waiting for new frame	-->

<memory>							<!-- memory options -->
<noofbuf>8</noofbuf>				<!-- Number of buf segments -->
</memory>						

<!-- <applet>DualAreaGray16</applet> -->		<!-- Name of FPGA applet -->

</gsc>

